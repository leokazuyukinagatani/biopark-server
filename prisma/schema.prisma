generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "windows"]
}

generator erd {
  provider = "prisma-erd-generator"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  imageId   String?  @unique
  role      Role     @default(USER)

  @@map("users")
}

model Address {
  id     String @id @default(uuid())
  street String
  city   String
  state  String
  zip    String

  building   Building @relation(fields: [buildingId], references: [id])
  buildingId String   @unique

  @@map("address")
}

model Building {
  id          String  @id @default(uuid())
  name        String
  description String?

  floors     Int
  amenities  String[]
  Apartament Apartament[]
  image      String?

  address Address?

  @@map("buildings")
}

model Apartament {
  id            String   @id @default(uuid())
  number        Int
  bedrooms      Int
  bathrooms     Int
  parkingSpaces Int
  furnished     Boolean
  petsAllowed   Boolean
  size          Float
  building      Building @relation(fields: [buildingId], references: [id])
  buildingId    String
}

enum Role {
  USER
  ADMIN
}
